@model Post
@{
    ViewData["Title"] = "Makale Ekle";

}
<form asp-action="Create" asp-area="" asp-controller="Post" method="post" enctype="multipart/form-data">

    <input type="hidden" value="" />
    <div class="col-md-12">
        @if (TempData["MessageError"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["MessageError"].ToString()
            </div>
        }

        <div class="card">
            <div class="card-header">
                <div class="card-title">Makale Ekleme</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="@Model.Title" for="largeInput">Makale Başlığı</label>
                    <input asp-for="@Model.Title" type="text" class="form-control form-control-md" placeholder="Makale Başlığı">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Tags" for="largeInput">Etiketler</label>
                    <input asp-for="@Model.Tags" type="text" class="form-control form-control-md" id="largeInput" placeholder="Etiketleri virgüller ayırarak girebilirsiniz">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ImagePath" for="largeInput">Makale Görseli</label>
                    <input asp-for="@Model.ImagePath" type="file" name="files" class="form-control form-control-md" id="largeInput" placeholder="Makale Görsel">
                </div>
                <div class="form-group">
                    <label asp-for="CategroyId">Makale Kategorisi</label>
                    <select class="form-control form-control" id="defaultSelect" asp-items="@ViewBag.Categories" asp-for="CategroyId">
                        <option selected>Seçiniz...</option>
                    </select>
                </div>
                @*<div class="form-group">
                <label asp-for="@Model.PostDetail" for="largeInput">Makale Detayı</label>
                <textarea asp-for="@Model.PostDetail" rows="6" type="text" class="form-control form-control" id="defaultInput" placeholder="Default Input"></textarea>
                </div>*@
                <textarea asp-for="PostDetail" id="summernote"></textarea>

            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-success">Kaydet</button>

            </div>
        </div>
    </div>
    </div>
</form>

@section css {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">

}
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>
    <script>
        $('#summernote').summernote({
            tabsize: 1,
            height: 150
        });
    </script>
}





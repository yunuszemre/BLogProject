@model Post
@{
    ViewData["Title"] = "Makale Ekle";
    
}
<form asp-action="Create" asp-area="Admin" asp-controller="Post" method="post" enctype="multipart/form-data">

    <input type="hidden" value="" />
    <div class="offset-3  col-md-6">
        @if (TempData["MessageError"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["MessageError"].ToString()
            </div>
        }

        <div class="card">
            <div class="card-header">
                <div class="card-title">Makale Ekleme</div>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="@Model.Title" for="largeInput">Makale Başlığı</label>
                    <input asp-for="@Model.Title" type="text" class="form-control form-control-md"  placeholder="Makale Başlığı">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Tags" for="largeInput">Etiketler</label>
                    <input asp-for="@Model.Tags" type="text" class="form-control form-control-md" id="largeInput" placeholder="Etiketleri virgüller ayırarak girebilirsiniz">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ImagePath" for="largeInput">Makale Görseli</label>
                    <input asp-for="@Model.ImagePath" type="file" name="files" class="form-control form-control-md" id="largeInput" placeholder="Makale Görsel">
                </div>
                <div class="form-group">
                    <label asp-for="CategroyId">Makale Kategorisi</label>
                    <select class="form-control input-square" asp-items="@ViewBag.Categories" asp-for="CategroyId" >
                        <option selected>Seçiniz...</option>                        
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.PostDetail" for="largeInput">Makale Detayı</label>
                    <textarea asp-for="@Model.PostDetail" rows="6" type="text" class="form-control form-control" id="defaultInput" placeholder="Default Input"></textarea>
                </div>
            </div>
            <div class="card-action">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <button class="btn btn-danger">Cancel</button>
            </div>
        </div>
    </div>
    </div>
</form>



